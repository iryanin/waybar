{
    "position": "top",
    "layer": "top",
    "height": 26,
    "margin-top": 5,
    "margin-bottom": 0,
    "margin-left": 4,
    "margin-right": 4,
    "modules-left": ["custom/launcher","custom/separator", "wlr/workspaces", "custom/separator", "cpu", "custom/separator","memory", "custom/separator", "disk"],
    "modules-center": ["mpris"],
    "modules-right": ["tray", "custom/separator","bluetooth", "custom/separator","network", "custom/separator","wireplumber", "custom/separator","clock", "custom/separator","custom/power"],

    // Modules configuration

	"clock": {
		"format": " ÔÄó  {:%H:%M} ",
		"tooltip": "true",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format-alt": " ÔÅ≥  {:%d/%m} "
	},
	

	"wlr/workspaces": {
        "all-outputs": true,
        // "disable-scroll": false,
        "on-scroll-up": "hyprctl dispatch workspace -1",
        "on-scroll-down": "hyprctl dispatch workspace +1",
		"format": "{icon}",
		"on-click": "activate",
		"format-icons": {
            // "1": "ÔÑ†",
            // "2": "Ôâ®",
            // "3": "ÔÑ°",
            // "4": "ÔÜº",
            // "5": "ÔÅµ",
			"urgent": "ÔÅ™",
			"active": "ÔÜí",
			"default": "Û∞ßû",
        },
        "sort-by-number": true
    },


	"battery": {
        "interval": 60,
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format":"{icon}  {capacity}%",
        "format-charging": "{capacity}% Ôóß",
        "format-plugged": "{capacity}% Ôá¶",
        "format-alt": "{icon} {time}",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"],
        "max-length": 25
	},

    "memory": {
        "format": "Û∞çõ {}%",
        "format-alt": "Û∞çõ {used}/{total} GiB",
        "interval": 1
    },

    "cpu": {
        "format": "Û∞ª† {usage}%",
        "format-alt": "Û∞ª† {avg_frequency} GHz",
        "interval": 1
    },

    "disk": {
        "format": "Û∞ãä {}%",
        "format-alt": "Û∞ãä {used}/{total} GiB",
        "interval": 1,
        "path": "/"
    },
	
    "network": {
        "format": " {ifname} ",
        "format-wifi": " Ôá´  {ifname}: {essid} ({signalStrength}%) ",
        "format-ethernet": " Ôûñ  {ifname}: {ipaddr}/{cidr} ",
        "format-disconnected": " Û∞§≠  ", //An empty format will hide the module.
        "tooltip-format": " Ôûñ  {ifname} via {gwaddr} ",
        "max-length": 50
    },


	"tray": {
		"icon-size": 16,
		"spacing": 5
	},

    "wireplumber": {
        "format": "{icon} {volume}%",
        "format-muted": " ÔÄ¶ ",
        "on-click": "qpwgraph",
        // "on-click-right": "pavucontrol",
        "format-icons": [" ÔÄ¶ ", " ÔÄß ", " ÔÄ®  "],
        "max-volume": 150,
        "scroll-step": 1
    },

    "bluetooth": {
        "format": " Ôäî {status} ",
        "format-disabled": "", // an empty format will hide the module
        "format-connected": " Ôäî {device_alias} ",
        "format-connected-battery": " Ôäî {device_alias} {device_battery_percentage}% ",
        // "format-device-preference": [ "device1", "device2" ], // preference list deciding the displayed device
        "tooltip-format": "{controller_alias}\t{controller_address}\n\n{num_connections} connected",
        "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{num_connections} connected\n\n{device_enumerate}",
        "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
        "tooltip-format-enumerate-connected-battery": "{device_alias}\t{device_address}\t{device_battery_percentage}%"
    },

    "mpris": {
        "format": " {player_icon} {dynamic} ",
        "format-paused": " {status_icon} <i>{dynamic}</i> ",
        "max-length": 40,
        "player-icons": {
            "default": "‚ñ∂",
            "mpv": "üéµ"
        },
        "status-icons": {
            "paused": "‚è∏"
        },
        // "ignored-players": ["firefox"]
    },

    "custom/pipewire": {
        "tooltip": false,
        "max-length": 6,
        "exec": "$HOME/.config/waybar/scripts/pipewire.sh",
        "on-click": "pavucontrol",
        "on-click-right": "qpwgraph"
    },

    "custom/hyprpicker": {
        "format": " Û∞àã  ",
        "on-click": "hyprpicker -a -f hex",
        "on-click-right": "hyprpicker -a -f rgb"
    },

    
    "custom/launcher": {
        "format":" Û∞£á ",
        "on-click": "exec rofi -show drun",
        "tooltip": false,
    },

    "custom/media": {
        "format": "{icon} {}",
        "escape": true,
        "return-type": "json",
        "max-length": 40,
        "on-click": "playerctl play-pause",
        "on-click-right": "playerctl stop",
        "smooth-scrolling-threshold": 10, // This value was tested using a trackpad, it should be lowered if using a mouse.
        "on-scroll-up": "playerctl next",
        "on-scroll-down": "playerctl previous",
        "format-icons": {
            "Playing": "<span foreground='#E5B9C6'>Û∞íÆ Û∞êå Û∞í≠</span>",
            "Paused": "<span foreground='#928374'>Û∞íÆ Û∞è• Û∞í≠</span>"
        },
        "exec": "$HOME/.config/waybar/scripts/mediaplayer.py 2> /dev/null", // Script in resources/custom_modules folder
    },

    
    "custom/power": {
        "format":" ‚èª  ",
        "on-click": "exec ~/.config/rofi/powermenu/powermenu.sh",
        "tooltip": false,
    },

    "custom/separator": {
        "format": " | ",
        "interval": "once",
        "tooltip": false
    },
 }
